<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherited the hr_payslip form view to add 'payment Type' field within the 'payslip view'. -->
    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.view.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <field name='contract_id' position="after">
                <field name="payment_type"/>
                <field name="employer_id"/>
            </field>
        </field>
    </record>
    
    <record id="hr_payslip_view_tree" model="ir.ui.view">
        <field name="name">hr.payslip.view.tree</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="payment_type"/>
                <field name="employer_id"/>
                <field name="worked_days"/>
            </field>
        </field>
    </record>

    <record id="view_hr_payslip_filter" model="ir.ui.view">
        <field name="name">hr.payslip.select.inherit.afag</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='struct_id']" position="after">
                <field name="employer_id"/>
                <field name="payment_type"/>
            </xpath>
            <xpath expr="//filter[@name='group_by_company_id']" position="after">
                <separator/>
                <filter string="Payment Type" name="payment_type" context="{'group_by': 'payment_type'}"/>
                <filter string="Employer" name="employer_id" context="{'group_by': 'employer_id'}"/>
            </xpath>
        </field>
    </record>
    
</odoo>
