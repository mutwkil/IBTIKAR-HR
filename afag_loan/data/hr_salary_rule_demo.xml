<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo data: Define a salary rule  for loans -->
        <record id="hr_rule_loan" model="hr.salary.rule">
            <field name="code">LO</field>
            <field name="name">Loan</field>
            <field name="category_id" ref="hr_payroll.DED"/>
        <field name="condition_select">python</field>
        <field name="condition_python">
result = 'LOAN' in inputs
        </field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = inputs['LOAN'].amount
result_name = inputs['LOAN'].name
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="hr_payroll.structure_002"/>
            <field name="sequence" eval="190"/>
        </record>

    <record id="loan_settlement_salary_rule" model="hr.salary.rule">
        <field name="category_id" ref="hr_payroll.DED"/>
        <field name="name">Loan Settlement</field>
        <field name="sequence">4</field>
        <field name="code">LOANSET</field>
        <field name="condition_select">none</field>
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result = payslip.eos_id.unpaid_loan
        </field>
        <field name="struct_id" ref="afag_eos.structure_worker_eos"/>
    </record>

    </data>
</odoo>
