<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
        <record id="hr_salary_rule_overtime" model="hr.salary.rule">
            <field name="code">OVERTIME</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="name">Overtime</field>
            <field name="sequence" eval="7"/>
            <field name="appears_on_payslip" eval="True"/>
<!--            <field name="struct_id" ref="lm_hr_contract.hr_payroll_structure_regular"/>-->
            <field name="condition_select">python</field>
            <field name="condition_python">result = contract.compute_overtime(payslip)</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.compute_overtime(payslip)</field>
            <field name="struct_id" ref="hr_payroll.structure_002"/>
        </record>

        <record id="hr_overtime_config" model="hr.overtime.config">
            <field name="overtime_equation">wage/30/8 * ((total_normal_hours*1.5)+(total_weekend_hours*2))</field>
        </record>
        <record id="hr_days_overtime_config" model="hr.overtime.config">
            <field name="overtime_equation">325*days/26+fridays*120</field>
        </record>
</odoo>

